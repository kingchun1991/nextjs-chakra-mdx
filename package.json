{
  "name": "nextjs-chakra-mdx",
  "version": "0.1.0",
  "private": true,
  "author": "sozonome",
  "scripts": {
    "dev": "pnpm generate-json && next dev",
    "build": "pnpm generate-json && next build",
    "build:turbo": "turbo run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "npx turbo lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install",
    "generate-json": "node scripts/jsonGenerator.js"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mdx-js/loader": "^3.0.0",
    "@next/mdx": "^14.1.4",
    "@vercel/og": "^0.6.2",
    "clsx": "^2.1.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.17.9",
    "fs": "0.0.2",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.1",
    "next": "14.1.4",
    "next-mdx-remote": "^4.4.1",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/cz-commitlint": "^18.4.4",
    "@playwright/test": "^1.40.1",
    "@types/react": "^18.2.46",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-sznm": "^2.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.1.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.x.x",
    "pnpm": ">=8"
  }
}
